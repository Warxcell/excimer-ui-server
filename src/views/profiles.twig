{% extends "index.twig" %}

{% block content %}
    {% if profiles|length %}
        <ul class="list-holder">
            {% for profile in profiles %}
            <li class="list-item">
                        <span>
                            <a href="{{ getProfileUrl(profile.id) }}">
                                {{ profile.name }}
                            </a>
                            <data value="{{ profile.createdAt.toISOString() }}">({{ profile.createdAt.toDateString() }})</data>

                            {{ profile.duration / 1000000 }}ms
                        </span>
            </li>
            {% endfor %}
        </ul>

        <div class="pagination center">
            <a {% if currentPage > 1 %}href="{{ getUrl(currentPage - 1) }}"
               {% else %}class="disabled"{% endif %}>&laquo;</a>

            {% for page in range(1, totalPages) %}
                <a href="{{ getUrl(page) }}" class="{% if page == currentPage %}active{% endif %}">{{ page }}</a>
            {% endfor %}

            <a {% if currentPage < totalPages %}href="{{ getUrl(currentPage + 1) }}" {% else %}class="disabled"{% endif %}>&raquo;</a>
        </div>
    {% else %}
    No profiles yet.
    {% endfor %}

    <style>
        body {
            font-size: 20px;
        }

        a {
            color: #333;
            text-decoration: none;
        }

        .list-holder {
            padding: 0;
            max-width: 1000px;
            margin: 0 auto;
        }

        .list-item {
            box-shadow: 0 0px 3px 1px rgba(0, 0, 0, 0.5);
            padding: 10px;
            margin: 20px 0;
            border-radius: 10px;
            list-style: none;
            display: flex;
            justify-content: space-between;
        }

        data {
            color: #999;
            font-style: italic;
            font-size: 0.8em;
        }

        .pagination {
            display: inline-block;
        }

        .center {
            text-align: center;
        }

        .pagination a {
            color: black;
            float: left;
            padding: 8px 16px;
            text-decoration: none;
            transition: background-color .3s;
            margin: 0 4px;
        }

        .pagination a.active {
            background-color: #4CAF50;
            color: white;
        }

        .pagination a.disabled {
            opacity: 0.5;
        }

        .pagination a:hover:not(.active) {
            background-color: #ddd;
        }
    </style>
{% endblock %}